.box-des {
    padding-bottom: 8rpx;
    line-height: 45rpx;
    font-size: 25rpx;
    color: #DCDFE6;
}

.box-type {
    color: #909399;
}

.box {
    width: 100%;
    background: #2d2d2f;
    border-radius: 20rpx;
    color: #FFFFFF;
    letter-spacing: 1px;
    font-weight: 500;
    margin-bottom: 30rpx;
}

.box-content {
    padding: 30rpx 35rpx;
}

.box-item {
    line-height: 60rpx;
    text-align: center;
    border-radius: 16rpx;
    width: 60rpx;
    height: 60rpx;
    margin-right: 30rpx;
    transform: translateY(-9rpx);
    float: left;
}

.box-title {
    font-size: 30rpx;
    line-height: 55rpx;
    font-weight: bolder;
}

.action-title {
    height: 130rpx;
    color: #DCDFE6;
    font-weight: bolder;
    margin: 65rpx 0;
    font-size: 28rpx;
    line-height: 55rpx;
}

.action-footer {
    font-size: 24rpx;
    margin-top: 60rpx;
    text-align: center;
    color: #C0C4CC;
}

.success-btn {
    font-size: 34rpx;
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    background: #2d2d2f;
    border-radius: 16rpx;
    color: #0066ff;
}

.delete-btn {
    font-size: 34rpx;
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    background: #2d2d2f;
    border-radius: 16rpx;
    color: #ff3838;
}