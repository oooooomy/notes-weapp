@import "../../static/css/common.wxss";

.van-nav-bar__title {
    color: #303133;
}

.cell-index--van-cell__right-icon {
    color: #FFFFFF;
    font-weight: bolder;
}

.van-cell {
    background: transparent !important;
    padding: 26rpx 20rpx !important;
}

.van-cell__title {
    font-size: 26rpx;
    font-weight: 900;
    padding-left: 10rpx;
    color: #FFFFFF;
}

.cell-index--van-cell__left-icon {
    color: #FFFFFF;
    font-size: 38rpx !important;
}

.popup-username {
    font-weight: bolder;
    color: #FFFFFF;
    padding-top: 5rpx;
    font-size: 30rpx;
    text-align: center;
}

.popup-back {
    width: 80rpx;
    height: 80rpx;
    background: #00b894;
    border-radius: 100%;
    position: absolute;
    bottom: 5vh;
    left: 70%;
    line-height: 80rpx;
    text-align: center;
    font-weight: bold;
}

.popup-back-icon {
    transform: rotate(90deg);
}

.header-content-img {
    width: 45rpx;
    height: 45rpx;
    float: left;
}

.header-title {
    letter-spacing: 0;
    font-weight: bold;
    font-size: 35rpx;
    color: #FFFFFF;
}

.card {
    border-radius: 30rpx;
    width: 100%;
    height: 220rpx;
    margin-top: 10px;
    background: aqua;
}

.text-hidden {
    display: inline-block;
    white-space: nowrap;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card-title {
    padding-top: 40rpx;
    color: #FFFFFF;
    font-weight: bolder;
    font-size: 35rpx;
}

.card-count {
    font-size: 22rpx;
    color: #FFFFFF;
    padding-top: 3rpx;
}

.title {
    padding-bottom: 30rpx;
}

.title-date {
    letter-spacing: 0;
    font-size: 55rpx;
    font-weight: 900;
    color: #FFFFFF;
}

.title-des {
    color: #C0C4CC;
    padding-top: 8rpx;
    font-size: 22rpx;
    font-weight: 500;
    line-height: 36rpx;
}